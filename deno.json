{
  "tasks": {
    "dev": "deno run -A npm:vite dev",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "serve": "deno run -A npm:vite build && deno run -A npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno run -A npm:vitest",
    "package": "deno run -A npm:svelte-package",
    "changelog": "deno run -A npm:auto-changelog --package --output changelog.md --hide-credit --commit-limit false"
  },
  "lock": false,
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-unused-ignore",
        "default-param-last",
        "eqeqeq",
        "guard-for-in",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-const-assign",
        "no-eval",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "prefer-ascii"
      ]
    }
  },
  "fmt": {
    "include": ["src/"],
    "indentWidth": 2,
    "lineWidth": 90,
    "semiColons": false,
    "singleQuote": true
  },
  "unstable": ["fmt-component", "sloppy-imports"]
}
