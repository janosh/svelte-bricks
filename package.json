{
  "name": "svelte-bricks",
  "description": "Svelte masonry component with SSR support and column balancing",
  "author": "Janosh Riebesell <janosh.riebesell@gmail.com>",
  "homepage": "https://janosh.github.io/svelte-bricks",
  "repository": "https://github.com/janosh/svelte-bricks",
  "license": "MIT",
  "version": "0.4.1",
  "type": "module",
  "svelte": "./dist/index.js",
  "bugs": "https://github.com/janosh/svelte-bricks/issues",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --run && playwright test",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "svelte": "^5.48.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/package": "^2.5.7",
    "@vitest/coverage-v8": "^4.0.18",
    "@wooorm/starry-night": "^3.9.0",
    "abstract-syntax-tree": "^2.22.0",
    "happy-dom": "^20.3.7",
    "mdsvex": "^0.12.6",
    "svelte-check-rs": "^0.7.0",
    "svelte-multiselect": "^11.6.0",
    "svelte-preprocess": "^6.0.3",
    "svelte-toc": "^0.6.2",
    "svelte2tsx": "^0.7.46",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "svelte",
    "masonry",
    "pinterest-layout",
    "component"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./Masonry.svelte": {
      "types": "./dist/Masonry.svelte.d.ts",
      "svelte": "./dist/Masonry.svelte",
      "default": "./dist/Masonry.svelte"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 90
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
